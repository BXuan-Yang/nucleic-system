<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper  namespace="com.ydf.queue.mapper.CheckedMapper">

    <resultMap id="checkedMap" type="com.ydf.common.domain.Checked">
        <result property="id" column="id"/>
        <result property="name" column="name"/>
        <result property="phone" column="phone"/>
        <result property="identityType" column="identity_type"/>
        <result property="identity" column="identity"/>
        <result property="gender" column="gender"/>
        <result property="birth" column="birth"/>
        <result property="country" column="country"/>
        <result property="age" column="age"/>
        <result property="habitation" column="habitation"/>
        <result property="address" column="address"/>
        <result property="userId" column="user_id"/>
        <result property="status" column="status"/>
        <result property="isDeleted" column="is_deleted"/>
        <result property="createTime" column="create_time"/>
        <result property="updateTime" column="update_time"/>
    </resultMap>

    <insert id="insertChecked" parameterType="com.ydf.common.domain.Checked">
        insert into `checked` (`name`,`phone`,`identity_type`,`identity`,`gender`,`birth`,`country`,
                                     `age`,`habitation`,`address`,`user_id`)
                                     values (#{name},#{phone},#{identityType},#{identity},#{gender},#{birth},#{country},
                                             #{age},#{habitation},#{address},#{userId})
    </insert>

    <select id="queryCheckedById" parameterType="Integer" resultMap="checkedMap">
        select * from `checked` where `id` = #{id}
    </select>

    <select id="queryCheck" resultMap="checkedMap" parameterType="Integer">
        select * from `checked` where `user_id` = #{userId} and `is_deleted` = 0
    </select>

</mapper>